@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/Areas/Admin/Scripts/product.js")"></script>
}

<script type="text/html" id="product-list-template">
    <div class="row-fluid">
    <div class="span2 offset10">
        <div class="span6">
            <button class="btn btn-primary" data-toggle="button" data-bind="click:addProduct">Add New</button>
        </div>
    </div>
</div>
    <div class="accordion" data-bind="foreach: products">
        <div class="accordion-group" data-bind="attr: { 'id': itemId }">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" data-bind="text: name(), attr: { 'data-id': itemId(), 'href': '#' + itemId() + '_detail' }, click: edit"></a>
            </div>
            <div data-bind="attr: { 'id': itemId() + '_detail', 'data-id': itemId(), 'data-detail': itemId() + '_detail_body' }" class="accordion-body collapse">
                <div class="product-detail" data-bind="attr: { 'id': itemId() + '_detail_body', 'data-id': itemId() }">
                    <div class="container-fluid">
                        <ul class="nav nav-tabs">
                            <li><a data-bind="attr: { 'href': '#product-tab-content' + itemId() }" data-toggle="tab">Product</a></li>
                            <li><a data-bind="attr: { 'href': '#product-variant-tab-content' + itemId() }" data-toggle="tab">Product Variants</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" data-bind="attr: { 'id': 'product-tab-content' + itemId() }">
                                <form class="form-horizontal">
                                    <div class="control-group">
                                        <label class="control-label" for="inputProductName">Name</label>
                                        <div class="controls">
                                            <input type="text" data-bind="value: name" id="inputProductName" placeholder="Product Name">
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="inputPassword">Password</label>
                                        <div class="controls">
                                            <input type="password" id="inputPassword" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <div class="controls">
                                            <label class="checkbox">
                                                <input type="checkbox">
                                                Remember me
                                            </label>
                                            <button type="submit" class="btn">Sign in</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane" data-bind="attr: { 'id': 'product-variant-tab-content' + itemId() }">
                                <div class="accordion" id="accordion2" data-bind="foreach: productVariants">
                                    <div class="accordion-group">
                                        <div class="accordion-heading">
                                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" data-bind="text: name, attr: { 'href': '#product-variant-detail_' + id() }"></a>
                                        </div>
                                        <div data-bind="attr: { 'id': 'product-variant-detail_' + id() }" class="accordion-body collapse">
                                            <div class="accordion-inner">
                                                <div class="row-fluid">

                                                    <form class="form-horizontal">
                                                        <div class="control-group">
                                                            <label class="control-label">Name</label>
                                                            <div class="controls">
                                                                <input type="text" data-bind="value: name" placeholder="Product Variant Name">
                                                            </div>
                                                        </div>
                                                        <div class="control-group">
                                                            <label class="control-label">Price</label>
                                                            <div class="controls">
                                                                <input type="text" data-bind="value: price" placeholder="Product Variant Price">
                                                            </div>
                                                        </div>
                                                        <div class="control-group">
                                                            <label class="control-label">Shipping Required</label>
                                                            <div class="controls">
                                                                <input type="checkbox" data-bind="checked: requiresShipping">
                                                            </div>
                                                        </div>
                                                        <div class="control-group">
                                                            <label class="control-label">Active</label>
                                                            <div class="controls">
                                                                <input type="checkbox" data-bind="checked: active">
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span2 offset2">
                                                        <div class="span3">
                                                            <button type="button" class="btn btn-primary" data-toggle="button">Save</button>
                                                        </div>
                                                        <div class="span3">
                                                            <a class="btn" data-toggle="collapse" data-bind="attr: { 'href': '#product-variant-detail_' + id() }">Cancel</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span2 offset2">
                                <div class="span3">
                                    <button class="btn btn-primary" data-bind="attr: { 'href': '#' + itemId() + '_detail' }, click: save">Save</button>
                                    @*<a class="btn btn-primary" data-bind="attr: { 'href': '#' + itemId() + '_detail' }, click: save">Save</a>*@
                                </div>
                                <div class="span3">
                                    <button class="btn" data-toggle="collapse" data-bind="attr: { 'href': '#' + itemId() + '_detail' }, click: cancel">Cancel</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>

<script type="text/html" id="product-detail-template">
</script>

<div id="product-list" data-bind="template: { name: 'product-list-template' }"></div>






<!-- Modal -->
<div id="product-save-modal" data-backdrop="static" class="modal hide fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">

    <div class="modal-body">
        <div style="width: 100px; margin: auto">
            <p>
                <img src="@Url.Content("~/Images/ajax-loader.gif")" />&nbsp;<span>Saving</span></p>
        </div>
    </div>

</div>
<div id="facebook"></div>
